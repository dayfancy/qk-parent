<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qk.management.mapper.DeptMapper">
    <update id="update">
        update dept
        <set>
            <if test="name != null and name!=''">
                name = #{name},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="count" resultType="java.lang.Integer">
        SELECT count(*)from dept
        <where>
            <if test="name != null and name!=''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <select id="selectByPage" resultType="com.qk.entity.Dept">
        select * from dept
        <where>
            <if test="name != null and name!=''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by update_time desc
        limit #{offset},#{pageSize}
    </select>
</mapper>